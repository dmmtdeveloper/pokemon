---
import Layout from "@layouts/Layout.astro";
import "@styles/global.css";
import type { PokemonListResponse } from "@interfaces/pokemon-list.response";
import PokemonCard from "@components/pokemons/PokemonCard.astro";
import Title from "@components/shared/Title.astro";

const resp = await fetch("https://pokeapi.co/api/v2/pokemon?limit24");
const data = (await resp.json()) as PokemonListResponse;

const title = "Pokémon static site";
---

<Layout title={title}>
  <Title title="Listado de pokémon" />
 

  <section
    aria-label="Listado de pokémons"
    class="grid grid-cols-1 sm:grid-cols-4 md:grid-cols-5 gap-2"
  >
    {data.results.map(({ name, url }) => <PokemonCard name={name} url={url} />)}
  </section>
</Layout>
